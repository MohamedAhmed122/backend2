@model Backend2.Models.CalculateViewModel
@{
    ViewBag.Title = "Calculator";
}

<h2>Calculator</h2>

<form asp-controller="Colculation" asp-action="ModelBindingInSeparateModel">
    <div class="form-group form-inline">
        <div class="row">
            <input class="form-control" asp-for="firstNum" type="text" />
            <span class="field-validation-error" asp-validation-for="firstNum"></span>
            <select name="Op" class="form-control">
                <option selected>+</option>
                <option>-</option>
                <option>*</option>
                <option>/</option>
            </select>
            <input class="form-control" asp-for="secondNum" type="text" />
            <span class="field-validation-error" asp-validation-for="secondNum"></span>
            <button type="submit" class="btn btn-primary"> Calculate</button>
        </div>
    </div>
</form>
